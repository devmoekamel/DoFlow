  @model List<DashboardVM>

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="text-center mb-4">Freelancers Overview</h2>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@user.UserName</h5>
                    <p class="card-text">
                        <strong>Projects:</strong> @user.ProjectCount <br />
                        <strong>Missions:</strong> @user.MissionCount <br />
                        <strong>Total Hours:</strong> @user.TodayHours.ToString(@"hh\:mm\:ss")
                    </p>
                </div>
            </div>
        </div>
    }
</div>
