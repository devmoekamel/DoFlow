<script>
    function showDeleteModal(userId) {
        document.getElementById('delete-modal-' + userId).classList.remove('hidden');
    }

    function deleteFreelancer(userId) {
        // Perform the delete request and update the UI accordingly
        $.post('/AdminDashboard/Delete', { UserId: userId }, function (data) {
            // Hide the modal
            document.getElementById('delete-modal-' + userId).classList.add('hidden');
            // Remove the freelancer item from the list
            document.querySelector('[data-userid="' + userId + '"]').remove();
            // Check if there are no freelancers left
            if ($('#freelancer-list').children().length === 0) {
                $('#no-freelancer-message').show();
            }
        }).fail(function (xhr) {
            console.error("Error deleting freelancer:", xhr.responseText);
        });
    }

    function Details(Id) {
        $.get('/Mission/Details/' + Id, function (data) {
            $("#modalContent").html(data);
            $("#modalOverlay").removeClass("hidden");
        }).fail(function (xhr) {
            console.error("Error Loading Partial View:", xhr.responseText);
        });
    }
</script>
