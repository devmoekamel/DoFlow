
@model FreelanceManager.ViewModels.Account.FreelancerRegisterVM
@{
    ViewData["Title"] = "Register";

}

<div class="flex items-center justify-center min-h-screen bg-gray-100 w-full">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
        <div class="flex justify-center mb-4">
            <svg class="w-8 h-8 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"></path>
            </svg>
        </div>
        <h2 class="mb-6 text-2xl font-semibold text-center text-gray-900">Register</h2>
      
        <form asp-action="Register" asp-controller="Freelancer">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700">User Name</label>
                <input asp-for="UserName" type="text" class="w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700">Email address</label>
                <input asp-for="Email" type="email" class="w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700">ConfirmPassword</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700">PhoneNumber</label>
                <input asp-for="PhoneNumber" type="text" class="w-full p-2 mt-1 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" value="Sign Up" class="w-full p-2 text-white bg-indigo-600 rounded-lg hover:bg-indigo-700">Sign Up</button>
        </form>
        <div class="flex items-center my-4">
            <div class="w-full border-b border-gray-300"></div>
            <span class="px-2 text-gray-400">Or</span>
            <div class="w-full border-b border-gray-300"></div>
        </div>
        <div class="flex gap-4">
            <button class="flex items-center justify-center w-1/2 p-2 border border-gray-300 rounded-lg hover:bg-gray-100">
                <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="w-5 h-5">
                <span class="ml-2 text-sm font-medium">Google</span>
            </button>
            <button class="flex items-center justify-center w-1/2 p-2 border border-gray-300 rounded-lg hover:bg-gray-100">
                <img src="https://www.svgrepo.com/show/349375/github.svg" alt="GitHub" class="w-5 h-5">
                <span class="ml-2 text-sm font-medium">GitHub</span>
            </button>
        </div>
        <p class="text-center">
            <a asp-action="Login" class="text-indigo-600 hover:underline">You Already Have Account!</a>
        </p>
    </div>
</div>

<partial name="_ValidationScriptsPartial">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
